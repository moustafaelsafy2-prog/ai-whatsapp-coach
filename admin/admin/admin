        box.innerHTML = `<h4>Ø¬Ù„Ø³Ø© ${i+1} (${new Date(session.timestamp).toLocaleString()})</h4>`;
        session.messages.forEach(m => {
          box.innerHTML += `<p><b>${m.role}:</b> ${m.text}</p>`;
        });
        div.appendChild(box);
      });
    }
  </script>
